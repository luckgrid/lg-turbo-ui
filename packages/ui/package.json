{
  "name": "@workspace/ui",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "format:diff": "prettier src --write --list-different",
    "lint": "eslint",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "ui:add": "pnpm dlx shadcn@latest add"
  },
  "prettier": "@workspace/prettier-config",
  "dependencies": {
    "@hookform/resolvers": "catalog:",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "embla-carousel-react": "^8.5.2",
    "lucide-react": "catalog:",
    "react-hook-form": "catalog:",
    "sonner": "^2.0.1",
    "tailwind-merge": "^3.0.2",
    "valibot": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/prettier-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "tailwindcss": "^4.0.14",
    "tailwindcss-intersect": "^2.2.0",
    "tailwindcss-motion": "^1.1.0",
    "tw-animate-css": "^1.2.4",
    "typescript": "catalog:"
  },
  "peerDependencies": {
    "react": "catalog:",
    "react-dom": "catalog:"
  },
  "files": [
    "dist"
  ],
  "exports": {
    "./main.css": "./src/styles/main.css",
    "./postcss.config": "./postcss.config.mjs",
    "./components/*": {
      "default": "./src/components/*.tsx",
      "types": "./dist/src/components/*.d.ts"
    },
    "./hooks/*": {
      "default": "./src/hooks/*.ts",
      "types": "./dist/src/hooks/*.d.ts"
    },
    "./lib/*": {
      "default": "./src/lib/*.ts",
      "types": "./dist/src/lib/*.d.ts"
    },
    "./primitives/*": {
      "default": "./src/primitives/*.tsx",
      "types": "./dist/src/primitives/*.d.ts"
    },
    "./providers/*": {
      "default": "./src/providers/*.tsx",
      "types": "./dist/src/providers/*.d.ts"
    },
    "./styles/*": "./src/styles/*.css"
  }
}
