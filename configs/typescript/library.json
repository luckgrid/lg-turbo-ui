{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "./base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "composite": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "sourceMap": true,
    "verbatimModuleSyntax": true,

    "outDir": "${configDir}/dist"
  }
}
