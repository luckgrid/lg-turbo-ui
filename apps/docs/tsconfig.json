{
  "extends": "@workspace/typescript-config/next.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@workspace/tailwind-config/*": ["../../configs/tailwind/src/*"],
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@workspace/next-ui/*": ["../../packages/ui-next/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
